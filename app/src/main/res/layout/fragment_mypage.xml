<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#ffffff">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <ImageView
            android:id="@+id/mypage_background_img"
            android:layout_width="match_parent"
            android:layout_height="200dp"
            android:layout_marginRight="2dp"
            android:background="@drawable/cover_default"/>

        <RelativeLayout
            android:layout_width="81dp"
            android:layout_height="81dp"
            android:layout_marginTop="160dp"
            android:layout_marginLeft="20dp">

            <de.hdodenhof.circleimageview.CircleImageView
                android:layout_width="74dp"
                android:layout_height="74dp"
                android:layout_centerInParent="true"
                android:src="@android:color/white"
                />
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/mypage_profile_img"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_centerInParent="true"
                android:src="@drawable/profile_default"
                />
        </RelativeLayout>

        <Button
            android:id="@+id/mypage_profile_change_btn"
            android:layout_width="29dp"
            android:layout_height="29dp"
            android:layout_marginTop="205dp"
            android:layout_marginLeft="75dp"
            android:background="@drawable/camera"
            />

        <TextView
            android:id="@+id/mypage_name_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="박보영"
            android:textSize="20sp"
            android:layout_marginLeft="121dp"
            android:layout_below="@+id/mypage_background_img"
            android:layout_marginTop="3dp"
            android:textColor="#444444"
            android:fontFamily="@font/notosanscjkkr_bold"
            />

        <TextView
            android:id="@+id/mypage_role_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="PM"
            android:textSize="20sp"
            android:layout_marginLeft="5dp"
            android:layout_below="@+id/mypage_background_img"
            android:layout_toRightOf="@+id/mypage_name_tv"
            android:layout_marginTop="3dp"
            android:textColor="#444444"
            android:fontFamily="@font/notosanscjkkr_bold"
            />

        <Button
            android:id="@+id/mypage_edit_btn"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="27dp"
            android:layout_marginTop="12dp"
            android:layout_marginLeft="10dp"
            android:layout_alignTop="@+id/mypage_name_tv"
            android:background="@drawable/darkgray"
            />

        <TextView
            android:id="@+id/mypage_summary_tv"
            android:layout_width="314dp"
            android:layout_height="70dp"
            android:layout_centerHorizontal="true"
            android:layout_below="@+id/mypage_name_tv"
            android:layout_marginTop="22dp"
            android:text="누구나 타고난 환경과 관계 없이 꿈을 꿀 수 있는 사회를 만들고 싶습니다."
            android:textSize="14sp"
            android:textColor="#444444"
            android:fontFamily="@font/notosanscjkkr_regular"
            />

        <TextView
            android:id="@+id/mypage_link_tv"
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="7dp"
            android:layout_below="@id/mypage_summary_tv"
            android:background="#eeeeee"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:text="www.naver.com"
            android:textSize="14sp"
            android:textColor="#444444"
            android:gravity="center"/>

        <TextView
            android:id="@+id/mypage_intro_btn"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="더 보기 >"
            android:layout_alignParentRight="true"
            android:textColor="#c5c5c5"
            android:layout_alignBottom="@+id/mypage_link_tv"
            android:layout_marginRight="25dp"
            android:fontFamily="@font/notosanscjkkr_regular"
            />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_below="@+id/mypage_link_tv"
            android:layout_marginTop="14dp"
            android:background="#eeeeee"
            />

        <LinearLayout
            android:id="@+id/mypage_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:layout_below="@id/mypage_link_tv"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목적"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                />

            <TextView
                android:id="@+id/mypage_aim_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="공모전참여"
                android:textColor="#444444"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분야"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                />

            <TextView
                android:id="@+id/mypage_department_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="콘텐츠"
                android:textColor="#444444"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                />

            <TextView
                android:id="@+id/mypage_area_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="서울"
                android:textColor="#444444"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_project_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/mypage_subject_layout"
            android:layout_marginTop="20dp"
            android:background="#f8f8f8"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="18dp"
                android:layout_height="20dp"
                android:layout_marginLeft="38dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/profile_list"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="#444444"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

            <Button
                android:id="@+id/mypage_project_btn"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/nextdarkgray"
                android:layout_marginLeft="230dp"
                android:layout_gravity="center_vertical"
                />

        </LinearLayout>
        <LinearLayout
            android:id="@+id/mypage_seed_layout"
            android:layout_width="match_parent"
            android:layout_below="@+id/mypage_project_layout"
            android:layout_height="50dp"
            android:background="#f8f8f8"
            android:layout_marginBottom="5dp"
            android:orientation="horizontal">

            <ImageView
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:layout_marginLeft="34dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/seed_darkgray"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="씨앗"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="#444444"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="60"
                android:layout_marginLeft="240dp"
                android:layout_gravity="center"/>
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="개"
                android:layout_marginLeft="3dp"
                android:layout_gravity="center"/>

        </LinearLayout>

        <LinearLayout
            android:id="@+id/mypage_logout_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_below="@+id/mypage_seed_layout"
            android:background="#f8f8f8"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/logout_btn"
                android:layout_width="22dp"
                android:layout_height="22dp"
                android:layout_marginLeft="36dp"
                android:layout_gravity="center_vertical"
                android:background="@drawable/logoutbtn"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="로그아웃"
                android:layout_gravity="center_vertical"
                android:layout_marginLeft="25dp"
                android:textColor="#c5c5c5"
                android:fontFamily="@font/notosanscjkkr_regular"
                />
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>