<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jemin.Activity.InviteActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:orientation="vertical"
        android:background="#f8f8f8">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="144dp"
            android:background="#f8f8f8">

            <View
                android:id="@+id/invite1_line1_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#c5c5c5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:layout_toLeftOf="@+id/invite1_progress2_img"
                android:layout_marginRight="2dp"
                />

            <View
                android:id="@+id/invite1_line2_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#c5c5c5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                />

            <View
                android:id="@+id/invite1_line3_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#c5c5c5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:layout_toRightOf="@+id/invite1_progress3_img"
                android:layout_marginLeft="2dp"
                />


            <ImageView
                android:id="@+id/invite1_progress1_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_toLeftOf="@+id/invite1_line1_view"
                android:layout_marginRight="2dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/progress_1_active"
                />

            <ImageView
                android:id="@+id/invite1_progress2_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/invite1_line2_view"
                android:layout_marginRight="2dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/progress_2"
                />

            <ImageView
                android:id="@+id/invite1_progress3_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/invite1_progress2_img"
                android:layout_toRightOf="@+id/invite1_line2_view"
                android:layout_marginLeft="2dp"
                android:background="@drawable/progress_3"
                />

            <ImageView
                android:id="@+id/invite1_progress4_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/invite1_line3_view"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@+id/invite1_progress3_img"
                android:background="@drawable/progress_4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="누구와 함께할 건가요?"
                android:textSize="26sp"
                android:textColor="#444444"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="26dp"
                android:layout_below="@+id/invite1_progress1_img"
                />

        </RelativeLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#f8f8f8"
            android:orientation="vertical"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="190dp"
                android:background="#ffffff">

                <TextView
                    android:id="@+id/invite_role_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="역할"
                    android:textColor="#000000"
                    android:layout_marginLeft="40dp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:textSize="16sp"
                    android:layout_marginTop="13dp"
                    />

                <Button
                    android:id="@+id/invite_pm_btn"
                    android:layout_width="89dp"
                    android:layout_height="41dp"
                    android:background="@drawable/selector"
                    android:text="PM"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:layout_marginTop="18dp"
                    android:layout_marginLeft="43dp"
                    android:layout_below="@+id/invite_role_tv"
                    />

                <Button
                    android:id="@+id/invite_planner_btn"
                    android:layout_width="104dp"
                    android:layout_height="41dp"
                    android:background="@drawable/selector"
                    android:text="기획자"
                    android:layout_toRightOf="@+id/invite_pm_btn"
                    android:layout_marginLeft="5dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:layout_below="@+id/invite_role_tv"
                    />

                <Button
                    android:id="@+id/invite_designer_btn"
                    android:layout_width="117dp"
                    android:layout_height="41dp"
                    android:background="@drawable/selector"
                    android:text="디자이너"
                    android:layout_toRightOf="@+id/invite_planner_btn"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="18dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:layout_below="@+id/invite_role_tv"
                    />

                <Button
                    android:id="@+id/invite_developer_btn"
                    android:layout_width="89dp"
                    android:layout_height="41dp"
                    android:background="@drawable/selector"
                    android:text="개발자"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="110dp"
                    android:layout_below="@+id/invite_pm_btn"
                    />

                <Button
                    android:id="@+id/invite_etc_btn"
                    android:layout_width="89dp"
                    android:layout_height="41dp"
                    android:background="@drawable/selector"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:text="기타"
                    android:layout_toRightOf="@+id/invite_developer_btn"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="8dp"
                    android:layout_below="@+id/invite_pm_btn"
                    />


            </RelativeLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/invite_range_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집 기간"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="16sp"
                />

            <Button
                android:id="@+id/invite_range_btn"
                android:layout_width="319dp"
                android:layout_height="55dp"
                android:text="날짜 선택"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:layout_gravity="center"
                android:layout_marginTop="18dp"
                android:background="#eeeeee"
                />
        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:layout_marginTop="9dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/invite_personnel_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="모집 인원"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite_personnel_edit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:hint="예) 0명, 00명, 1명~최대 1000명"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="17dp"
                android:layout_below="@+id/invite_personnel_tv"
                android:backgroundTint="@color/Transparent"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:textSize="14sp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="명"
                android:layout_toRightOf="@id/invite_personnel_edit"
                android:layout_marginTop="25dp"
                android:layout_below="@id/invite_personnel_tv"
                android:textColor="#444444"
                android:layout_marginLeft="17dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

        </RelativeLayout>
        <Button
            android:id="@+id/invite1_next_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="9dp"
            android:text="다음"
            android:gravity="center"
            android:textSize="16dp"
            android:layout_marginBottom="0dp"
            android:textColor="#ffffff"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:background="#45b6ff"/>
    </LinearLayout>
</LinearLayout>