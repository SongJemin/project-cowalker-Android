<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:background="#f8f8f8"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:background="#f8f8f8">

            <View
                android:id="@+id/invite4_line1_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#45b6ff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:layout_toLeftOf="@+id/invite4_progress2_img"
                android:layout_marginRight="2dp"
                />

            <View
                android:id="@+id/invite4_line2_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#45b6ff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                />

            <View
                android:id="@+id/invite4_line3_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#45b6ff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:layout_toRightOf="@+id/invite4_progress3_img"
                android:layout_marginLeft="2dp"
                />


            <ImageView
                android:id="@+id/invite4_progress1_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/invite4_line1_view"
                android:layout_marginRight="2dp"
                android:background="@drawable/check"
                />

            <ImageView
                android:id="@+id/invite4_progress2_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/invite4_line2_view"
                android:layout_marginRight="2dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/check"
                />

            <ImageView
                android:id="@+id/invite4_progress3_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/invite4_progress2_img"
                android:layout_toRightOf="@+id/invite4_line2_view"
                android:layout_marginLeft="2dp"
                android:background="@drawable/check"
                />

            <ImageView
                android:id="@+id/invite4_progress4_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/invite4_line3_view"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@+id/invite4_progress3_img"
                android:background="@drawable/progress_4_active"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="이런 점이 궁금해요."
                android:textSize="26sp"
                android:textColor="#444444"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/invite4_progress1_img"
                />

        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:background="#ffffff"
            android:layout_marginTop="5dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="질문 (선택)"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="20dp"
                android:layout_gravity="center_vertical"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="16sp"
                />

        </LinearLayout>

        <LinearLayout
            android:id="@+id/invite4_question_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
        </LinearLayout>

        <Button
            android:id="@+id/invite4_plus_btn"
            android:layout_width="34dp"
            android:layout_height="34dp"
            android:layout_marginTop="22dp"
            android:background="@drawable/add_btn_unclick"
            android:layout_gravity="center"
            />

    </LinearLayout>
    <Button
        android:id="@+id/invite4_confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="확인"
        android:gravity="center"
        android:textSize="16sp"
        android:textColor="#ffffff"
        android:background="#45b6ff"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:layout_alignParentBottom="true"
        />
</RelativeLayout>