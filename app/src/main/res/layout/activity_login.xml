<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
   >

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.airbnb.lottie.LottieAnimationView
            android:id="@+id/animation_view"
            android:layout_alignParentTop="true"
            android:layout_alignParentRight="true"
            android:layout_marginRight="20dp"
            android:layout_width="200dp"
            android:layout_height="400dp"
            android:layout_marginTop="-100dp"
            app:lottie_autoPlay="true"
            app:lottie_fileName="plane_only.json"
            app:lottie_imageAssetsFolder="images/"
            app:lottie_loop="false"/>


        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/login_title_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="30sp"
                android:textColor="@color/colorPrimaryDark"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="70dp"
                android:layout_marginLeft="76dp"
                android:text="@string/login"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:fontFamily="@font/notosansmonocjkkr_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="78dp"
                android:text="이메일" />

            <EditText
                android:id="@+id/login_email_ed"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginLeft="65dp"
                android:theme="@style/EditTextStyle"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="18sp"
                android:fontFamily="@font/notosansmonocjkkr_bold"
                android:layout_marginTop="10dp"
                android:layout_marginLeft="78dp"
                android:text="비밀번호" />

            <EditText
                android:id="@+id/login_pw_ed"
                android:layout_width="280dp"
                android:layout_height="45dp"
                android:layout_marginLeft="65dp"
                android:inputType="textPassword"
                android:theme="@style/EditTextStyle"/>

            <ImageButton
                android:id="@+id/login_ok_btn"
                android:layout_width="300dp"
                android:layout_height="55dp"
                android:layout_marginLeft="55dp"
                android:layout_marginTop="40dp"
                android:background="@android:color/transparent"
                android:src="@drawable/login_btn"/>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/login_auto_txt"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorinfo"
                    android:textSize="17sp"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:layout_marginTop="8dp"
                    android:layout_marginLeft="169dp"
                    android:text="자동 로그인" />

                <ImageView
                    android:id="@+id/login_check_btn"
                    android:layout_marginTop="4dp"
                    android:layout_marginLeft="2dp"
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/icon_check_blue"
                    />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal"
                android:layout_marginTop="15dp"
                android:layout_marginLeft="129.5dp">
                <TextView
                    android:id="@+id/login_signup_btn"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:fontFamily="@font/notosansmonocjkkr_bold"
                    android:text="회원가입"/>

                <View
                    android:layout_gravity="center"
                    android:layout_marginLeft="20.5dp"
                    android:layout_marginRight="20.5dp"
                    android:layout_width="2dp"
                    android:layout_height="12dp"
                    android:background="@color/colorPrimaryDark"/>

                <TextView
                    android:id="@+id/login_nonmem_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textColor="@color/colorPrimaryDark"
                    android:textSize="17sp"
                    android:fontFamily="@font/notosansmonocjkkr_bold"
                    android:text="둘러보기"/>
            </LinearLayout>
        </LinearLayout>




    </RelativeLayout>


</LinearLayout>