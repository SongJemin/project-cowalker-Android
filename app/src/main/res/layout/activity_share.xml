<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@android:color/white"
        android:layout_width="match_parent"
        android:layout_height="400dp"
        android:paddingLeft="39dp"
        android:paddingRight="39dp"
        android:layout_above="@id/recommend_ok_btn"
        android:orientation="vertical">

        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="이 멋진 프로젝트를 널리 알리세요."
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:textSize="18sp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="감사의 표시로 씨앗을 드립니다."
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:textSize="18sp"/>

        <LinearLayout
            android:gravity="center_vertical"
            android:layout_marginTop="60dp"
            android:layout_marginLeft="40dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/share_kakao_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/kakaotalk"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="카카오톡"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_facebook_btn"
                android:layout_marginLeft="65dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/facebook_img"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="페이스북"/>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/share_link_btn"
                android:layout_marginLeft="65dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/link"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="링크"/>
            </LinearLayout>
        </LinearLayout>

        <LinearLayout
            android:layout_marginLeft="40dp"
            android:gravity="center_vertical"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <LinearLayout
                android:id="@+id/share_main_btn"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/mail"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="메일"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_message_btn"
                android:layout_marginLeft="70dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/message"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="메세지"/>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/share_more_btn"
                android:layout_marginLeft="68dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="43dp"
                    android:layout_height="43dp"
                    android:src="@drawable/more"/>
                <TextView
                    android:layout_gravity="center"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="14sp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="@color/colorPrimaryDark"
                    android:text="More"/>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/recommend_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="55dp"
        android:text="공유하기"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>