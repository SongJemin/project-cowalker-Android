<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/transparent"
    android:orientation="vertical">
    <LinearLayout
        android:background="@drawable/pop_round"
        android:layout_width="match_parent"
        android:layout_height="420dp"
        android:paddingLeft="39dp"
        android:paddingRight="39dp"
        android:layout_above="@id/recommend_ok_btn"
        android:orientation="vertical">
        
        <TextView
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="멋진 동행을 추천해주세요."
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:textSize="18sp"/>
        <TextView
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="감사의 표시로 씨앗을 드립니다."
            android:textColor="@color/colorPrimaryDark"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:textSize="18sp"/>
        
        <android.support.v7.widget.RecyclerView
            android:id="@+id/recommend_rv"
            android:layout_marginTop="30dp"
            android:layout_width="match_parent"
            android:layout_marginLeft="15dp"
            android:layout_height="130dp"></android.support.v7.widget.RecyclerView>
        <EditText
            android:id="@+id/recommend_ed"
            android:hint="추천 멘트를 입력해 주세요."
            android:textColor="@color/colorPrimaryDark"
            android:layout_width="match_parent"
            android:background="@android:color/transparent"
            android:textColorHint="#c5c5c5"
            android:layout_height="100dp"
            android:layout_marginLeft="15dp"
            android:layout_marginBottom="30dp"
            android:inputType="textImeMultiLine"/>
    </LinearLayout>
    <TextView
        android:gravity="center"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textSize="16sp"
        android:textColor="@android:color/white"
        android:background="@color/colorPrimary"
        android:id="@+id/recommend_ok_btn"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:text="추천하기"
        android:layout_alignParentBottom="true"/>
</RelativeLayout>