<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Jemin.Activity.ProjectCreate2Activity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="새 프로젝트"
                android:textColor="#444444"
                android:textStyle="bold"
                android:textSize="26sp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="29dp"/>
            <View
                android:layout_width="match_parent"
                android:layout_height="0.5dp"
                android:background="#c5c5c5"
                android:layout_marginTop="15dp"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트 이미지"
                android:textColor="#444444"
                android:textSize="16sp"
                android:layout_marginTop="13dp"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textStyle="bold"/>


            <HorizontalScrollView
                android:id="@+id/horizontalScrollView1"
                android:layout_width="match_parent"
                android:layout_height="200dp" >

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:layout_marginTop="9dp"
                    android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="150dp"
                        android:orientation="horizontal">

                        <LinearLayout
                            android:id="@+id/create_project2_layout"
                            android:layout_width="wrap_content"
                            android:layout_height="match_parent"
                            android:layout_marginTop="9dp"
                            android:orientation="horizontal">


                        </LinearLayout>

                        <Button
                            android:id="@+id/create2_plus_btn"
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:layout_marginTop="9dp"
                            android:layout_marginLeft="20dp"
                            android:background="@drawable/add_pic"
                            />

                    </LinearLayout>

                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="대표 이미지"
                        android:textSize="12sp"
                        android:textColor="#444444"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="67dp"
                        android:fontFamily="@font/notosanscjkkr_regular"
                        />

                </LinearLayout>

            </HorizontalScrollView>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="프로젝트 소개"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:textColor="#444444"
                android:layout_marginLeft="20dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textStyle="bold"/>

            <EditText
                android:id="@+id/create2_explain_edit"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#ffffff"
                android:hint="팀소개, 주요업무, 자격요건, 팀빌딩 절차, 문의처, 상세정보"
                android:paddingTop="20dp"
                android:paddingLeft="20dp"
                android:paddingRight="40dp"
                android:textSize="16sp"
                android:gravity="top"
                android:layout_marginTop="13dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:layout_gravity="center"/>
        </LinearLayout>

        <Button
            android:id="@+id/create2_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_alignParentBottom="true"
            android:background="@drawable/okbtn"
            android:layout_marginTop="50dp"/>

    </RelativeLayout>
</LinearLayout>