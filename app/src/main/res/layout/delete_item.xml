<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal">
    <ImageView
        android:id="@+id/recruit_delete_check"
        android:layout_marginLeft="35dp"
        android:layout_marginTop="50dp"
        android:layout_width="wrap_content"
        android:src="@drawable/delete_check_selector"
        android:layout_height="wrap_content" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="37dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="10dp"
        android:orientation="vertical"
        android:background="@drawable/layout_design">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recruit_list_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:text="개발자"
                android:textColor="#666666"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/recruit_list_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:text="1명"
                android:textSize="16sp"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/recruit_list_dday_tv"
                android:layout_width="40dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="110dp"
                android:layout_marginTop="12dp"
                android:background="#45b6ff"
                android:gravity="center"
                android:text="D-9"
                android:textSize="11sp"
                android:textColor="#ffffff" />
        </LinearLayout>

        <TextView
            android:id="@+id/recruit_list_task_tv"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="5dp"
            android:text="웹앱 서비스 개발"
            android:fontFamily="@font/notosanscjkkr_regular"
            android:textColor="#666666"
            android:textSize="16sp" />

    </LinearLayout>
</LinearLayout>