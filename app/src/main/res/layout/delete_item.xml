<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="horizontal">

    <Button
        android:layout_marginLeft="15dp"
        android:layout_marginTop="50dp"
        android:layout_width="24dp"
        android:layout_height="24dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="88dp"
        android:layout_marginBottom="10dp"
        android:layout_marginLeft="17dp"
        android:layout_marginRight="17dp"
        android:layout_marginTop="19dp"
        android:orientation="vertical"
        android:background="@drawable/layout_design">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/recruit_list_position_tv"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="23dp"
                android:layout_marginTop="20dp"
                android:text="개발자"
                android:textColor="#666666"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/recruit_list_num_tv"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginTop="20dp"
                android:layout_marginLeft="8dp"
                android:text="1명"
                android:textColor="#666666" />

            <TextView
                android:id="@+id/recruit_list_dday_tv"
                android:layout_width="wrap_content"
                android:layout_height="19dp"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="20dp"
                android:background="#64dfff"
                android:gravity="center"
                android:text="D-9"
                android:textColor="#ffffff" />
        </LinearLayout>
        <TextView
            android:id="@+id/recruit_list_task_tv"
            android:layout_width="106dp"
            android:layout_height="19dp"
            android:layout_marginLeft="23dp"
            android:layout_marginTop="5dp"
            android:text="웹앱 서비스 개발"
            android:textColor="#666666"
            android:textSize="15sp" />

    </LinearLayout>
</LinearLayout>