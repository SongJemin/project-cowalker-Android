<?xml version="1.0" encoding="UTF-8"?>

    <ScrollView
    android:orientation="vertical"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:background="#ffffff">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textColor="#444444"
        android:textStyle="bold"
        android:layout_marginBottom="30dp"
        android:layout_marginTop="40dp"
        android:layout_marginLeft="35dp"
        android:text="프로젝트"
        android:textSize="26sp"/>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="39dp"
        android:layout_width="match_parent"
        android:background="#eeeeee">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:text="개설 프로젝트"
        android:textSize="16sp"/>

</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#f8f8f8">

    <TextView
        android:layout_height="244dp"
        android:layout_width="match_parent"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textColor="#c5c5c5"
        android:text="개설한 프로젝트가 없습니다."
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/create_tv"/>

    <android.support.v7.widget.RecyclerView
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:id="@+id/projectlist_create_rv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/main_tab"
        android:layout_below="@+id/my_toolbar"
        android:layout_margin="8dp"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="39dp"
        android:layout_width="match_parent"
        android:background="#eeeeee">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:text="참여한 프로젝트"
        android:textSize="16sp"/>

</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#f8f8f8">

    <TextView
        android:layout_height="244dp"
        android:layout_width="match_parent"
        android:textColor="#c5c5c5"
        android:text="참여한 프로젝트가 없습니다."
        android:fontFamily="@font/notosanscjkkr_regular"
        android:textSize="18sp"
        android:gravity="center"
        android:id="@+id/participate_tv"/>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/projectlist_participate_rv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/main_tab"
        android:layout_below="@+id/my_toolbar"
        android:layout_margin="8dp"/>

</LinearLayout>


    <LinearLayout
        android:orientation="vertical"
        android:layout_height="39dp"
        android:layout_width="match_parent"
        android:background="#eeeeee">

    <TextView
        android:layout_height="wrap_content"
        android:layout_width="wrap_content"
        android:fontFamily="@font/notosanscjkkr_bold"
        android:textColor="#000000"
        android:layout_marginTop="5dp"
        android:layout_marginLeft="24dp"
        android:text="지원한 프로젝트"
        android:textSize="16sp"/>

</LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_height="wrap_content"
        android:layout_width="match_parent"
        android:background="#f8f8f8">

    <TextView
        android:layout_height="244dp"
        android:layout_width="match_parent"
        android:textColor="#c5c5c5"
        android:text="지원한 프로젝트가 없습니다."
        android:textSize="18sp"
        android:fontFamily="@font/notosanscjkkr_regular"
        android:gravity="center"
        android:id="@+id/apply_null_tv"/>

    <android.support.v7.widget.RecyclerView
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:id="@+id/projectlist_apply_rv"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_above="@+id/main_tab"
        android:layout_below="@+id/my_toolbar"
        android:layout_margin="8dp"/>
</LinearLayout>
</LinearLayout>
</ScrollView>