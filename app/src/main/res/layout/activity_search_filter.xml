<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f8f8f8"
    tools:contextOff=".FilterActivity">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="79dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="27dp"
                android:text="필터"
                android:textStyle="bold"
                android:textColor="#444444"
                android:textSize="18sp"
                android:layout_marginTop="33dp"
                android:layout_gravity="center"
                />

        </LinearLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/filter_purpose_tv"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="역할"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

            <ToggleButton
                android:id="@+id/filter_purposeall_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="전체"
                android:textOn="전체"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/filter_purpose_tv"
                />

            <ToggleButton
                android:id="@+id/filter_startup_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="창업"
                android:textOn="창업"
                android:layout_toRightOf="@+id/filter_purposeall_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_purposeall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_contest_btn"
                android:layout_width="121dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="공모전 참여"
                android:textOn="공모전 참여"
                android:layout_toRightOf="@+id/filter_startup_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_purposeall_btn"
                android:layout_below="@+id/filter_purpose_tv"
                />

            <ToggleButton
                android:id="@+id/filter_study_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="스터디"
                android:textOn="스터디"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="58dp"
                android:layout_below="@+id/filter_purposeall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_side_btn"
                android:layout_width="151dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="사이드 프로젝트"
                android:textOn="사이드 프로젝트"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_study_btn"
                android:layout_alignTop="@+id/filter_study_btn"
                />

            <ToggleButton
                android:id="@+id/filter_startup2_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="창업"
                android:textOn="창업"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="93dp"
                android:layout_below="@+id/filter_study_btn"
                />

            <ToggleButton
                android:id="@+id/filter_purposeetc_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="기타"
                android:textOn="기타"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_startup2_btn"
                android:layout_toRightOf="@+id/filter_startup2_btn"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="198dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/filter_field_tv"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="분야"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

            <ToggleButton
                android:id="@+id/filter_fieldall_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="전체"
                android:textOn="전체"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/filter_field_tv"
                />

            <ToggleButton
                android:id="@+id/filter_chain_btn"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="블록체인"
                android:textOn="블록체인"
                android:layout_toRightOf="@+id/filter_fieldall_btn"
