            <ToggleButton
                android:id="@+id/filter_roleall_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="전체"
                android:textOn="전체"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/filter_role_tv"
                />


            <ToggleButton
                android:id="@+id/filter_pm_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="PM"
                android:textOn="PM"
                android:layout_toRightOf="@+id/filter_roleall_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_roleall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_planner_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="기획자"
                android:textOn="기획자"
                android:layout_toRightOf="@+id/filter_pm_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_pm_btn"
                />

            <ToggleButton
                android:id="@+id/filter_designer_btn"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="디자이너"
                android:textOn="디자이너"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="24dp"
                android:layout_below="@+id/filter_roleall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_developer_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="개발자"
                android:textOn="개발자"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_designer_btn"
                android:layout_alignTop="@+id/filter_designer_btn"
                />

            <ToggleButton
                android:id="@+id/filter_roleetc_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="기타"
                android:textOn="기타"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_developer_btn"
                android:layout_alignTop="@+id/filter_developer_btn"
                />

        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="221dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/filter_location_tv"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="장소"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:textSize="16sp"
                android:layout_marginTop="10dp"
                />

            <ToggleButton
                android:id="@+id/filter_locationall_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="전체"
                android:textOn="전체"
                android:layout_marginTop="8dp"
                android:layout_marginLeft="25dp"
                android:layout_below="@+id/filter_location_tv"
                />

            <ToggleButton
                android:id="@+id/filter_seoul_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="서울"
                android:textOn="서울"
                android:layout_toRightOf="@+id/filter_locationall_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_locationall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_gyeonggi_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="경기도"
                android:textOn="경기도"
                android:layout_toRightOf="@+id/filter_seoul_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_seoul_btn"
                />

            <ToggleButton
                android:id="@+id/filter_incheon_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="인천"
                android:textOn="인천"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="49dp"
                android:layout_below="@+id/filter_locationall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_gangwon_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="강원도"
                android:textOn="강원도"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_incheon_btn"
                android:layout_alignTop="@+id/filter_incheon_btn"
                />

            <ToggleButton
                android:id="@+id/filter_chungcheong_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="충청도"
                android:textOn="충청도"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_gangwon_btn"
                android:layout_alignTop="@+id/filter_incheon_btn"
                />

            <ToggleButton
                android:id="@+id/filter_jeolla_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="전라도"
                android:textOn="전라도"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="37dp"
                android:layout_below="@+id/filter_incheon_btn"
                />

            <ToggleButton
                android:id="@+id/filter_gyeongsang_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="경상도"
                android:textOn="경상도"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_jeolla_btn"
                android:layout_alignTop="@+id/filter_jeolla_btn"
                />

            <ToggleButton
                android:id="@+id/filter_jeju_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="제주도"
                android:textOn="제주도"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_gyeongsang_btn"
                android:layout_alignTop="@+id/filter_jeolla_btn"
                />



        </RelativeLayout>

        <Button
            android:id="@+id/filter_confirm_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:text="확인"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#64dfff"
            android:layout_alignParentBottom="true"
            />
    

    </LinearLayout>

</ScrollView>