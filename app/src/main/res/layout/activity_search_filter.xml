                android:layout_alignTop="@+id/filter_fieldall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_iot_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="IoT"
                android:textOn="IoT"
                android:layout_toRightOf="@+id/filter_chain_btn"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_fieldall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_ai_btn"
                android:layout_width="117dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="인공지능"
                android:textOn="인공지능"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="79dp"
                android:layout_below="@+id/filter_fieldall_btn"
                />

            <ToggleButton
                android:id="@+id/filter_design_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="디자인"
                android:textOn="디자인"
                android:layout_marginLeft="6dp"
                android:layout_toRightOf="@+id/filter_ai_btn"
                android:layout_alignTop="@+id/filter_ai_btn"
                />

            <ToggleButton
                android:id="@+id/filter_contents_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="창업"
                android:textOn="창업"
                android:layout_marginTop="6dp"
                android:layout_marginLeft="99dp"
                android:layout_below="@+id/filter_ai_btn"
                />

            <ToggleButton
                android:id="@+id/filter_fieldetc_btn"
                android:layout_width="89dp"
                android:layout_height="41dp"
                android:background="@drawable/round_button"
                android:textOff="기타"
                android:textOn="기타"
                android:layout_marginLeft="6dp"
                android:layout_alignTop="@+id/filter_contents_btn"
                android:layout_toRightOf="@+id/filter_contents_btn"
                />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="152dp"
            android:layout_marginTop="10dp"
            android:background="#ffffff">

            <TextView
                android:id="@+id/filter_role_tv"
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="역할"
                android:textColor="#000000"
                android:layout_marginLeft="20dp"
