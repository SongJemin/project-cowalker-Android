<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:background="#f8f8f8"
        android:focusableInTouchMode="true"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="163dp"
            android:background="#f8f8f8">

            <View
                android:id="@+id/invite2_line1_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#45b6ff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:layout_toLeftOf="@+id/invite2_progress2_img"
                android:layout_marginRight="2dp"
                />

            <View
                android:id="@+id/invite2_line2_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#c5c5c5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                />

            <View
                android:id="@+id/invite2_line3_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#c5c5c5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="42dp"
                android:layout_toRightOf="@+id/invite2_progress3_img"
                android:layout_marginLeft="2dp"
                />


            <ImageView
                android:id="@+id/invite2_progress1_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="30dp"
                android:layout_marginLeft="20dp"
                android:layout_toLeftOf="@+id/invite2_line1_view"
                android:layout_marginRight="2dp"
                android:background="@drawable/check"
                />

            <ImageView
                android:id="@+id/invite2_progress2_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/invite2_line2_view"
                android:layout_marginRight="2dp"
                android:layout_marginTop="30dp"
                android:background="@drawable/progress_2_active"
                />

            <ImageView
                android:id="@+id/invite2_progress3_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/invite2_progress2_img"
                android:layout_toRightOf="@+id/invite2_line2_view"
                android:layout_marginLeft="2dp"
                android:background="@drawable/progress_3"
                />

            <ImageView
                android:id="@+id/invite2_progress4_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/invite2_line3_view"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@+id/invite2_progress3_img"
                android:background="@drawable/progress_4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="어떤 도움이 필요한가요?"
                android:textSize="26sp"
                android:textColor="#444444"
                android:layout_marginLeft="40dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/invite2_progress1_img"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"                android:textSize="16sp"
                />
            
            <EditText
                android:id="@+id/invite2_task_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="어떤 도움을 받기 원하나요?"
                android:textSize="15dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 시간 및 기간"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite2_activity_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="예) 2018.07.01~2018.09.09 주 3회 정기모임"
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="45dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="활동 위치"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite2_area_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="상세 주소를 입력해주세요."
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="45dp"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="혜택 및 보상"
                android:layout_marginTop="2dp"
                android:layout_marginLeft="40dp"
                android:textColor="#000000"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite2_reward_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="예) 상금 분배, 스톡옵션, 페이"
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="45dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:layout_marginTop="12dp"
                />


        </LinearLayout>

        <Button
            android:id="@+id/invite2_next_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="17dp"
            android:text="다음"
            android:gravity="center"
            android:textSize="16dp"
            android:fontFamily="@font/notosanscjkkr_bold"
            android:textColor="#ffffff"
            android:background="#45b6ff"/>

    </LinearLayout>


</LinearLayout>