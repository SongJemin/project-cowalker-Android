<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical">

    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical"
        tools:context=".Jemin.Activity.ProjectIntroWaitActivity">

        <ImageView
            android:id="@+id/intro_wait_background_img"
            android:layout_width="match_parent"
            android:layout_height="172dp"
            android:background="@drawable/boyoung"
            />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="186dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:orientation="horizontal">

                <de.hdodenhof.circleimageview.CircleImageView
                    android:id="@+id/intro_wait_profile_iv"
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_centerInParent="true"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="20dp"
                    android:src="@drawable/profile_default"
                    />

                <TextView
                    android:id="@+id/intro_wait_title_tv"
                    android:layout_width="254dp"
                    android:layout_height="76dp"
                    android:layout_marginLeft="14dp"
                    android:layout_marginTop="21dp"
                    android:text="KU석KU석 프로젝트      '사라진 친구를 찾아라'"
                    android:textColor="#444444"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="130dp"
                    android:layout_marginTop="0dp"
                    android:text="With "
                    android:textColor="#f8c930"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/intro_wait_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="2dp"
                    android:layout_marginTop="0dp"
                    android:text="이충엽"
                    android:textColor="#f8c930"
                    android:textSize="14sp" />

                <ImageButton
                    android:layout_width="20dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="5dp"
                    android:src="@drawable/message" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">

                </LinearLayout>

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="horizontal">


                </LinearLayout>
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="46dp"
                android:orientation="horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="20dp"
                    android:layout_marginTop="20dp"
                    android:text="목적"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/intro_wait_aim_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="12dp"
                    android:text="공모전 참여"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="26dp"
                    android:text="분야"
                    android:layout_marginTop="20dp"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/intro_wait_department_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="콘텐츠"
                    android:textColor="#444444"
                    android:textSize="14sp" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="37dp"
                    android:layout_marginTop="20dp"
                    android:text="지역"
                    android:textColor="#c5c5c5"
                    android:textSize="14sp" />

                <TextView
                    android:id="@+id/intro_wait_area_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="20dp"
                    android:layout_marginLeft="12dp"
                    android:layout_marginTop="20dp"
                    android:text="서울"
                    android:textColor="#444444"
                    android:textSize="14sp" />
            </LinearLayout>

            <TextView
                android:id="@+id/intro_wait_summary_tv"
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="5dp"
                android:text="대학교에서 역사도 배우고 즐기는 야외 방탈출 게임"
                android:textColor="#444444"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="135dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:layout_marginLeft="20dp"
                android:layout_marginTop="16dp"
                android:text="프로젝트 상세 소개"
                android:textStyle="bold"
                android:textColor="#444444"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/intro_wait_explain_tv"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:layout_marginRight="14dp"
                android:ellipsize="end"
                android:maxLines="2"
                android:text="저희 크레용은 역사적 사실을 콘텐츠로 풀어내는 소셜 크리에이션 그룹입니다. 현재 KU석KU석 프로젝트를 진행하고 있으며 KU석KU석 프로젝트는 대학교에서 진행되는 야외방탈출 게임입니다. "
                android:textColor="#666666" />

            <ImageButton
                android:id="@+id/intro_wait_see_more"
                android:layout_width="73dp"
                android:layout_height="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="146dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/group_3"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/intro_wait_see_close"
                android:layout_width="20dp"
                android:layout_height="20dp"
                android:layout_marginLeft="200dp"
                android:clickable="true"
                android:background="@drawable/blue_copy"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/edit_design"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="24dp"
                android:layout_marginTop="17dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/intro_wait_invite_Tv"
                    android:layout_width="wrap_content"
                    android:layout_height="24dp"
                    android:layout_marginLeft="20dp"
                    android:text="모집"
                    android:textColor="#444444"
                    android:textSize="16sp" />



            </LinearLayout>

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recruit_list_recyclerview4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp">


            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="67dp"
            android:background="@drawable/lowbar_design"
            android:orientation="horizontal">

            <LinearLayout
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="23dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/intro_wait_recommend_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="17dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/recommend_darkgray" />

                <TextView
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="3dp"
                    android:text="추천하기"
                    android:textColor="#000000"/>


            </LinearLayout>

            <LinearLayout
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="18dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/intro_wait_share_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="17dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sharebtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="공유하기"
                    android:layout_marginTop="3dp"
                    android:textColor="#000000"
                    android:textSize="11sp"/>

            </LinearLayout>
            <Button
                android:id="@+id/intro_wait_change_btn"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="29dp"
                android:layout_marginTop="10dp"
                android:background="#eeeeee"
                android:text="참여 대기"
                android:textColor="#c5c5c5" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>