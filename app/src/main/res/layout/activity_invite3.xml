<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Jemin.Activity.Invite3Activity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:focusable="true"
        android:background="#f8f8f8"
        android:focusableInTouchMode="true"
        android:orientation="vertical">


        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="141dp"
            android:background="#f8f8f8">

            <View
                android:id="@+id/invite3_line1_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#64dfff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:layout_toLeftOf="@+id/invite3_progress2_img"
                android:layout_marginRight="2dp"
                />

            <View
                android:id="@+id/invite3_line2_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#64dfff"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                />

            <View
                android:id="@+id/invite3_line3_view"
                android:layout_width="27dp"
                android:layout_height="3dp"
                android:background="#c5c5c5"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="37dp"
                android:layout_toRightOf="@+id/invite3_progress3_img"
                android:layout_marginLeft="2dp"
                />


            <ImageView
                android:id="@+id/invite3_progress1_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_marginTop="25dp"
                android:layout_toLeftOf="@+id/invite3_line1_view"
                android:layout_marginRight="2dp"
                android:background="@drawable/check"
                />

            <ImageView
                android:id="@+id/invite3_progress2_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toLeftOf="@+id/invite3_line2_view"
                android:layout_marginRight="2dp"
                android:layout_marginTop="25dp"
                android:background="@drawable/check"
                />

            <ImageView
                android:id="@+id/invite3_progress3_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_alignTop="@+id/invite3_progress2_img"
                android:layout_toRightOf="@+id/invite3_line2_view"
                android:layout_marginLeft="2dp"
                android:background="@drawable/progress_3_active"
                />

            <ImageView
                android:id="@+id/invite3_progress4_img"
                android:layout_width="25dp"
                android:layout_height="25dp"
                android:layout_toRightOf="@+id/invite3_line3_view"
                android:layout_marginLeft="2dp"
                android:layout_alignTop="@+id/invite3_progress3_img"
                android:background="@drawable/progress_4"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="38dp"
                android:text="이런 당신이 필요해요!"
                android:textSize="26sp"
                android:textColor="#444444"
                android:layout_marginLeft="20dp"
                android:textStyle="bold"
                android:layout_marginTop="35dp"
                android:layout_below="@+id/invite3_progress1_img"
                />


        </RelativeLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#ffffff"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="필요 역량 및 기술"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite3_ability_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="활동에 필요한 역량과 기술을 입력해주세요."
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="경력 및 경험"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite3_career_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="예) 신입,1년 차 이상, 블록체인 스터디 수료"
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="우대 사항 (선택)"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite3_preference_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="일어 가능자,운전면허 소지자"
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="95dp"
            android:background="#ffffff"
            android:layout_marginTop="9dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="24dp"
                android:text="코멘트 (선택)"
                android:layout_marginTop="12dp"
                android:layout_marginLeft="20dp"
                android:textColor="#000000"
                android:textStyle="bold"
                android:textSize="16sp"
                />

            <EditText
                android:id="@+id/invite3_comment_edit"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:hint="예) 팀원에게 당부하고 싶은 말을 적어주세요."
                android:textSize="15dp"
                android:backgroundTint="@color/Transparent"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="12dp"
                />


        </LinearLayout>

        <Button
            android:id="@+id/invite3_next_btn"
            android:layout_width="match_parent"
            android:layout_height="60dp"
            android:layout_marginTop="22dp"
            android:text="다음"
            android:gravity="center"
            android:textSize="20dp"
            android:textColor="#ffffff"
            android:background="#64dfff"/>

    </LinearLayout>


</LinearLayout>