<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ffffffff"
        android:orientation="vertical" >

        <android.support.v4.view.ViewPager
            android:id="@+id/image_swipe"
            android:layout_width="match_parent"
            android:layout_height="360dp">
        </android.support.v4.view.ViewPager>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="160dp"
            android:orientation="vertical">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="94dp"
                android:orientation="horizontal">

                <RelativeLayout
                    android:layout_width="52dp"
                    android:layout_height="52dp"
                    android:layout_marginTop="22dp"
                    android:layout_marginLeft="30dp">

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:id="@+id/projectIntro_profile_iv"
                        android:layout_width="64dp"
                        android:layout_height="64dp"
                        android:layout_centerInParent="true"
                        android:src="@drawable/profile_default" />
                </RelativeLayout>

                <TextView
                    android:id="@+id/intro_title_tv"
                    android:layout_width="254dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="28dp"
                    android:layout_marginTop="15dp"
                    android:text="KU석KU석 프로젝트      '사라진 친구를 찾아라'"
                    android:textColor="#444444"
                    android:fontFamily="@font/notosanscjkkr_bold"
                    android:textSize="24sp" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/projectIntro_name_tv"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="110dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:text="With"
                    android:layout_gravity="center"
                    android:textColor="#f8c930"
                    android:textSize="16sp" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="이충엽"
                    android:textColor="#f8c930"
                    android:textSize="16sp"
                    android:layout_marginLeft="4dp"
                    android:layout_marginTop="9dp"/>

                <ImageButton
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_marginLeft="3dp"
                    android:layout_marginTop="7dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/message" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:id="@+id/projectintro_subject_layout"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:orientation="horizontal"
            android:layout_marginTop="15dp">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="지역"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                />

            <TextView
                android:id="@+id/projectintro_area_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="서울"
                android:textColor="#444444"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="목적"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                />

            <TextView
                android:id="@+id/projectintrt_aim_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="공모전 참여"
                android:textColor="#444444"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="분야"
                android:textColor="#c5c5c5"
                android:layout_marginLeft="25dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                />

            <TextView
                android:id="@+id/projectintro_department_tv"
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:text="콘텐츠"
                android:textColor="#444444"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="86dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="335dp"
                android:layout_height="40dp"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="5dp"
                android:layout_marginTop="15dp"
                android:text="대학교에서 역사도 배우고 즐기는 야외 방탈출 게임"
                android:textColor="#444444"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:textSize="14sp" />
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#eeeeee" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="190dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="16dp"
                android:text="프로젝트 상세 소개"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:textColor="#444444"
                android:textSize="15sp" />

            <TextView
                android:id="@+id/tv_short"
                android:layout_width="328dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="38dp"
                android:layout_marginRight="14dp"
                android:ellipsize="end"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/notosanscjkkr_regular"
                android:maxLines="2"
                android:text="저희 크레용은 역사적 사실을 콘텐츠로 풀어내는 소셜 크리에이션 그룹입니다. 현재 KU석KU석 프로젝트를 진행하고 있으며 KU석KU석 프로젝트는 대학교에서 진행되는 야외방탈출 게임입니다. "
                android:textColor="#666666" />

            <ImageButton
                android:id="@+id/see_more"
                android:layout_width="73dp"
                android:layout_height="16dp"
                android:layout_marginBottom="16dp"
                android:layout_marginLeft="166dp"
                android:layout_marginTop="14dp"
                android:background="@android:color/transparent"
                android:src="@drawable/group_3"
                android:clickable="true"/>

            <ImageButton
                android:id="@+id/see_close"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="200dp"
                android:clickable="true"
                android:background="@drawable/foldingbtn"
                android:visibility="gone"/>
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="279dp"
            android:background="@drawable/edit_design"
            android:orientation="vertical">

            <TextView
                android:layout_width="30dp"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginTop="17dp"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:text="모집"
                android:textColor="#444444"
                android:textSize="16sp" />

            <android.support.v7.widget.RecyclerView
                android:id="@+id/recruit_list_recyclerview2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="14dp"
                android:layout_marginLeft="15dp">
            </android.support.v7.widget.RecyclerView>


        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="70dp"
            android:background="@drawable/lowbar_design"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/intro_recommend_layout"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="43dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/intro_recommend_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="11dp"
                    android:layout_marginTop="17dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/recommend_darkgray" />

                <TextView
                    android:layout_width="41dp"
                    android:layout_height="wrap_content"
                    android:textSize="11sp"
                    android:layout_marginTop="3dp"
                    android:layout_marginLeft="5dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:text="추천하기"
                    android:textColor="#000000"/>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/intro_share_layout"
                android:layout_width="41dp"
                android:layout_height="match_parent"
                android:layout_marginLeft="20dp"
                android:orientation="vertical">

                <ImageButton
                    android:id="@+id/intro_share_btn"
                    android:layout_width="24dp"
                    android:layout_height="24dp"
                    android:layout_marginLeft="7dp"
                    android:layout_marginTop="17dp"
                    android:background="@android:color/transparent"
                    android:src="@drawable/sharebtn" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:text="공유하기"
                    android:layout_marginTop="3dp"
                    android:fontFamily="@font/notosanscjkkr_regular"
                    android:textColor="#000000"
                    android:textSize="11sp"/>

            </LinearLayout>

            <Button
                android:id="@+id/btn_join"
                android:layout_width="206dp"
                android:layout_height="50dp"
                android:layout_marginBottom="7dp"
                android:layout_marginLeft="39dp"
                android:layout_marginTop="10dp"
                android:background="#45b6ff"
                android:fontFamily="@font/notosanscjkkr_bold"
                android:text="참여하기"
                android:textColor="#ffffff" />
        </LinearLayout>
    </LinearLayout>
</ScrollView>